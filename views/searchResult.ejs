<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
        background-color: #f0f0f0;
        margin: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        color: #4285f4;
        margin-bottom: 20px;
    }

    /* Card Styles */
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
    }

    .card {
        width: 350px;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-content {
        padding: 15px;
    }

    .book-title {
        font-weight: bold;
        color: #4285f4;
        margin-bottom: 5px;
    }

    .book-author {
        color: #555;
    }

    .book-summary {
        color: #333;
        line-height: 1.5;
    }

    .empty-result {
        text-align: center;
        color: #555;
    }

    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <h1>Search Results</h1>

        <div id="result" class="card-container">
            <% if (result.length > 0) { %>
                <% result.forEach(book => { %>
                    <div class="card">
                        <img src="images/<%= book.image %>" alt="Book Cover">
                        <div class="card-content">
                            <h2 class="book-title"><%= book.title %></h2>
                            <p class="book-author">by <%= book.author %></p>
                            <p class="book-summary"><%= book.summary %></p>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="empty-result">No books found.</p>
            <% } %>
        </div>
    </div>

</body>
</html>
